# Usage:
#   yes | sudo ./PACKAGES

rpmbased=$(which rpm)
aptbased=$(which apt)

if [[ -n $rpmbased ]];then
	dnfcmd=dnf		# dnf | rpm | ?
	# packages for rpm-based systems (e.g. Red Hat, Centos)
	$dnfcmd install lapack-devel
	$dnfcmd install tcl-devel.x86_64
	$dnfcmd install tk-devel.x86_64
#	$dnfcmd install gtk3-devel.x86_64
#	$dnfcmd install freeglut-devel.x86_64
	$dnfcmd install wxGTK-devel
#	$dnfcmd install gl2ps-devel.x86_64
fi

if [ -n $aptbased ];then
	# Packages necessary for building Flaps on apt-based Linux (e.g. Debian)
	apt-get install liblapack-dev
	apt-get install tk-dev
	apt-get install tcl-dev
	apt-get install libwxgtk3.2-dev
fi
